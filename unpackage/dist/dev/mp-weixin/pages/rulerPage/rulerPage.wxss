.scroll-con {
  background: #f8f8f8;
  border-bottom: 1px solid #ccc;
  border-top: 1px solid #ccc;
  margin: 10px 0;
  width: 750rpx;
  height: 70px;
}
.scroll-con .topLine {
  height: 30px;
  padding-left: 8rpx;
}
.scroll-con .bottomNum {
  height: 30px;
  padding-left: 8rpx;
  width: 100%;
}
.scroll-con .bottomNum .allNum {
  display: inline-block;
  position: relative;
  text-align: center;
}
.scroll-con .allLine {
  display: inline-block;
  width: 2px;
  background: #999;
  position: relative;
}
.scroll-con .allLine:last-child {
  margin-right: 0px !important;
}
.scroll-con .LLine {
  height: 30px;
}
.scroll-con .MLine {
  height: 20px;
  top: -10px;
}
.scroll-con .SLine {
  height: 15px;
  top: -15px;
}
.line {
  position: absolute;
  height: 80%;
  top: 0;
  cursor: ew-resize;
  left: 8rpx;
  border-left: 1px solid #f00;
}