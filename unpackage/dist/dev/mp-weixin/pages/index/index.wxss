
.content {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		padding: 10rpx;
}
.content-details {
		display: grid;
		grid-template-columns: 1fr 1fr;
		width: 100%;
		justify-items: center;
}
.content-detail {
		padding: 30rpx;
		background-color: aquamarine;
		text-align: center;
		border-radius: 10rpx;
		margin: 10rpx;
		width: 70%;
}
